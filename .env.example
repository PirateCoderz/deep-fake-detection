# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fakedetect
DATABASE_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Model Configuration
MODEL_PATH=./models/product_classifier.h5
MODEL_VERSION=1.0.0
TARGET_IMAGE_SIZE=224

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_PER_HOUR=100

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FORMATS=jpeg,jpg,png,heic
TEMP_STORAGE_PATH=./temp_uploads
IMAGE_CLEANUP_HOURS=24

# Security
SECRET_KEY=your-secret-key-here
HTTPS_ONLY=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Model Training
TRAINING_BATCH_SIZE=32
VALIDATION_SPLIT=0.2
MIN_MODEL_ACCURACY=0.85

# Explainability
CONFIDENCE_THRESHOLD=60
MIN_EXPLANATION_REASONS=3
