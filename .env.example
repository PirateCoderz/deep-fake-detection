# Model Configuration
MODEL_PATH=./models/fake_detector_final.keras
MODEL_VERSION=1.0.0
TARGET_IMAGE_SIZE=224

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=["http://localhost:3000"]

# Rate Limiting
RATE_LIMIT_PER_HOUR=100

# File Upload
